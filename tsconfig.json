{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "sourceMap": true,
    "lib": ["ES2022", "DOM"],

    "strict": true,
    "declaration": true,
    "incremental": true,
    "verbatimModuleSyntax": true,

    "preserveConstEnums": true,

    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["./src/**/*.ts"]
}
